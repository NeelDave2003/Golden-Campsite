<% layout("/layouts/boilerplate") %>
    <h1></h1>


    <div class="row card mb-3">
        <h1 class="text-center">Edit Campground</h1>
            <div class="col-6 offset-3">
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate
                    class="validated-form" enctype="multipart/form-data">

                    <div class="mb-3 fs-4">
                        <label class="form-lable" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]"
                            value="<%=campground.title  %>" required>
                    </div>
                    <div class="mb-3 fs-4">
                        <label class="form-lable" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]"
                            value="<%=campground.location%>" required>
                    </div>
                    <div class="mb-3 fs-4">
                        <label class="form-lable" for="image">Add Images</label>
                        <input class="form-control" type="file" id="image" name="image" value="<%=campground.image  %>"
                            multiple required>
                    </div>
                    <div class="mb-3 fs-4">
                        <label class="form-lable" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="campground[description]"
                            required><%=campground.description  %></textarea>
                    </div>
          

            <div class="mb-3 fs-4">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text fs-4 " id="price-label">Rs</span>
                    <input type="text" class="form-control" id="price" placeholder="0.0" required
                        value="<%=campground.price  %>" aria-lable="price" aria-describedby="price-label"
                        name="campground[price]">

                </div>

            </div>
            <div class="mb-3 text-center">
                <% campground.images.forEach(function(img,i){ %>

                    <div class="d-flex justify-content-center">
                        <div class="col-md-4 px-0 ">

                            <img src="<%=img.thumbnail %> " class="img-thumbnail" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                                </div>
                                <label for="image-<%=i%>" class="mb-3 fs-6">DELETE ?</label>
                        </div>
                    </div>

                    <% }) %>
            </div>
            <div class="mb-3 fs-4">
                <button class="btn btn-success">Update Campground</button>
            </div>
        </div>
            </form>

    </div>
    
    </div>