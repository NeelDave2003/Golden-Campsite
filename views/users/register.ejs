<% layout('layouts/boilerplate') %> 
 

<div class="container  flex justify-content-center align-items-center mt-0">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://www.reserveamerica.com/webphotos/racms/articles/images/876e8794-6ab2-4960-be7c-c4c29634e285_image2_GettyImages-1198351769.jpg" alt="" class="card-img-top">
                <div class="card-body">
                    <h4 class="card-title">REGISTER</h4>

                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-lable"  for="username" >Username</label>
                            <input class="form-control" type="text" id="username" name="username"   required>
                        </div>
                        <div class="mb-3">
                            <label class="form-lable"  for="email" >Email</label>
                            <input class="form-control" type="email" id="email" name="email"required>
                        </div>
                        <div class="mb-3">
                            <label class="form-lable"  for="password" >Password</label>
                            <input class="form-control" type="password" id="password" name="password"required>
                        </div>
                        <button class="btn btn-success">Register</button>
                    </form>
                    
            </div>
        </div>
    </div>
</div>




















